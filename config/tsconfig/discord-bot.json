{
  "compilerOptions": {
    "target": "es2016",
    "module": "CommonJS",
    "types": ["vitest/globals"],
    "allowJs": true,
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
